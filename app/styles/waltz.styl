normalize-css()

@import colours
@import mixins

html,
body
    margin 0

a,
a:hover
    text-decoration none
    font-weight     bold

a:visited
    color   inherit
    
.navbar
    color            white
    background-color navbar-main
    padding          16px
    padding-bottom   8px
    border-radius    0
    margin-bottom    0

.navbar-border
    height           10px
    background-color color-main
    border-bottom    2px solid color-main-da
    border-top       2px solid color-main-li
    margin-bottom    20px

.navbar-title
    font-size   1.2em
    margin-left 64px

.navbar-icon
    width       48px
    height      48px
    margin      5px
    margin-top  0
    position    absolute
    shadowed-image("/img/waltz-example_logo.png", 0px, 1px, 3px, black)

.posts-list
    list-style  none
    margin      0
    padding     0

.post
    font-weight normal
    color       black
    display     block
    padding     5px
    margin      0

.post:hover
    background-color alpha(color-main, 0.1)
    font-weight      normal
    color            black

.post-title
    font-weight bold

.post-date
    font-style  italic