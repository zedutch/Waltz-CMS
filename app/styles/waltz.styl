normalize-css()

color-main    = rgb(126, 18, 44);
color-main-50 = rgba(126, 18, 44, 0.5);

html,
body
    margin 0

a,
a:hover
    text-decoration none
    font-weight     bold

a:visited
    color   inherit
    
.navbar
    color            white
    background-color black
    padding          16px
    border-radius    0

.navbar-title
    font-size   1.2em

.posts-list
    list-style  none
    margin      0
    padding     0

.post
    font-weight normal
    color       black
    display     block
    padding     5px
    margin      0

.post:hover
    background-color color-main-50
    font-weight      normal
    color            black

.post-title
    font-weight bold

.post-date
    font-style  italic