normalize-css()

@import colours
@import mixins

html,
body
    margin 0

a,
a:hover
    text-decoration none
    font-weight     bold

a:visited
    color   inherit
    
.navbar
    color            white
    background-color navbar-main
    padding          16px
    border-radius    0

.navbar-title
    font-size   1.2em

.posts-list
    list-style  none
    margin      0
    padding     0

.post
    font-weight normal
    color       black
    display     block
    padding     5px
    margin      0

.post:hover
    background-color alpha(color-main, 0.1)
    font-weight      normal
    color            black

.post-title
    font-weight bold

.post-date
    font-style  italic